# Contributor: Colin Shea <colins@evaryont.ath.cx>
pkgname=cave9
pkgver=0.3
_dataver=4
pkgrel=1
pkgdesc="A 3D FPS version of classic sfcave"
arch=('i686')
url="http://code.google.com/p/cave9"
license=('GPL')
depends=(sdl sdl_image sdl_ttf sdl_net)
makedepends=()
source=(http://cave9.googlecode.com/files/cave9_src-$pkgver.tgz http://cave9.googlecode.com/files/cave9_data-$_dataver.tgz)
md5sums=('5cd8180879e116e4c9d36c307d8122a1'
         '90e12967e9e103b1b5dff0ac15772371')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make

  mkdir -p $pkgdir/usr/bin
  mkdir -p $pkgdir/usr/share/$pkgname
  mv cave9 $pkgdir/usr/bin
  mv ../data/* $pkgdir/usr/share/$pkgname
  mv README.txt $pkgdir/usr/share/$pkgname
}

# vim:set ts=2 sw=2 et:
